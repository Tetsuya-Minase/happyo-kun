{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["@cloudflare/workers-types", "node"]
  },
  "include": [
    "slides/**/*",
    "components/**/*",
    "functions/**/*",
    "styles/**/*",
    "public/**/*"
  ]
}